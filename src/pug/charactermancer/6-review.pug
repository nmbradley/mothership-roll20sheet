charmancer.sheet-charmancer-review
    .sheet-cm-wrapper
        +charmancer-navigation("skills")
        .ms-cm-container
            .ms-cm-panel--full

                .ms-cm-statrow

                    each stat in stats
                        .ms-cm-stat(class=`cm-stat--${stat.attr}`)
                            .ms-cm-stat__label(data-i18n=`${stat.attr}`)
                            .ms-cm-stat__value(class=`t__${stat.attr}`)

                .ms-cm-saverow 

                    each save in saves 
                        .ms-cm-save 
                            input(name=`comp_${save.name}`, type="hidden")
                            .ms-cm-save__title(data-i18n=save.name)
                            .ms-cm-save__value
                            .ms-cm-save__desc(data-i18n=save.desc)

                .ms-cm-secrow

                    .ms-cm-altstat
                        .ms-cm-mainstat__title(data-i18n="health")
                        .ms-cm-mainstat__value(class=`ms-t__health`)
                            input(name=`comp_health`, type="hidden")

                    .ms-cm-altstat
                        .ms-cm-mainstat__title(data-i18n="stress")
                        .ms-cm-mainstat__value(class=`ms-t__stress`)
                            input(name=`comp_stress`, type="hidden")

                    .ms-cm-altstat
                        .ms-cm-mainstat__title(data-i18n="resolve")
                        .ms-cm-mainstat__value(class=`ms-t__resolve`)
                            input(name=`comp_resolve`, type="hidden")

                .ms-cm-skillrow
                    .ms-t__skilllist

                .ms-cm-equipment
                    .ms-t__skilllist

        +charmancer-pagecontrol({action: "equipment", text: "back"},{action: "cancel", text: "cancel"},{action: "finish", text: "finish"})